- content_tag_for(:tr, upload, :class => cycle(:odd, :even)) do
  %td.upload_file_name= h upload.try(:upload_file_name)
  %td.upload_file_size= h upload.try(:upload_file_size)
  %td.upload_content_type= h upload.try(:upload_content_type)
  %td.upload_created_at= h upload.try(:upload_created_at)
  %td.user= h upload.try(:user)
  %td.comment= h upload.try(:comment)
  %td.actions
    = link_to 'Show', upload_path(upload)
    |
    = link_to 'Edit', edit_upload_path(upload)
    |
    = link_to 'Destroy', upload, :confirm => 'Are you sure?', :method => :delete