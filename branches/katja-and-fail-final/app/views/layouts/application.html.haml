!!!
%html(xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en")
  %head
    %title SCAMIT testbed
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    = stylesheet_link_tag "scamit"
    = stylesheet_link_tag "formtastic"
    = stylesheet_link_tag "formtastic_changes"
    = stylesheet_link_tag "autocomplete"
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery-autocomplete'
    - if @controller.action_name == 'show' && @controller.controller_name == 'species'
      %script{:type => 'text/javascript', :src => 'http://maps.google.com/maps/api/js?sensor=false'}
      = javascript_include_tag 'googlemaps3'
  %body
    #container2
      - [:notice, :error, :message].each do |key|
        - unless flash[key].blank?
          #errorStyle
            = flash[key]
      #header
        = render :partial => 'layouts/header'
      #body2
        = yield
      #footer2
        = render :partial => 'layouts/footer'
