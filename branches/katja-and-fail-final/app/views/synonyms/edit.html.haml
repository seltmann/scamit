%h1.heading
  = "Editing synonym %s" % @synonym.id
  
- semantic_form_for(@synonym) do |form|
  = render 'synonyms/form', :form => form
  - unless @approval.blank?
    = form.input :approved, :as => :hidden, :value => 1
    = form.input :approvedby_id, :as => :hidden, :value => current_user.id
  - form.buttons do
    = form.commit_button 'Update'
    
%p.actions
  = link_to 'Cancel', synonyms_path