%table{:id => 'speciestable', :border => 0, :cellspacing => 0, :cellpadding => 5}
  %thead.header
    %tr
      %th{:width => '6%'} ID
      %th{:width => '44%'} Genus/species
      %th{:width => '50%'} Information

  %tbody.items.species
    - @species.each do |species|
      = render 'item', :species => species
%br
= will_paginate(@species)
%br
%br    

- unless @jq.blank?
  :javascript
    #{@jq}