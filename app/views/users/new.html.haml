%h1 Sign up as a new user
- @user.password = @user.password_confirmation = nil

= error_messages_for :user
- form_for :user, :url => users_path do |f|
  %p
    = f.label :login
    %br/
    = f.text_field :login
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :address
    %br/
    = f.text_field :address
  %p
    = f.label :phone
    %br/
    = f.text_field :phone        
  %p
    = f.label :affiliation
    %br/
    = f.text_field :affiliation
  %p
    = f.label 'Scamit Role'
    %br/
    = f.text_field :title  
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %p= f.submit "Sign up"
